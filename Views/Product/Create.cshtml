@model learnnet.Models.Product

@{
    ViewBag.Title = "Add New Product";
}
<div class="form-product-page">

    <h2 class="page-title" style="margin-bottom: 50px">@ViewBag.Title</h2>

    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "create_product_form" }))
    {
        @Html.AntiForgeryToken()
        <div class="error has-error">
            <span></span>
        </div>
        <div class="form-horizontal">
            <div class="form-group input-wrapper">
                <label class="control-label col-md-3" for="name">Product Name</label>
                <div class="col-md-11" style="margin-bottom: 15px;">
                    @Html.EditorFor(model => Model.name, new { htmlAttributes = new { @class = "form-control add_product_name" } })
                    @Html.ValidationMessageFor(model => Model.name, "", new { @class = "text-danger" })
                    <div id="name_error" class="has-error"></div>
                </div>
                <label class="control-label col-md-3" for="price">Product Price</label>
                <div class="col-md-11">
                    @Html.EditorFor(model => Model.price, new { htmlAttributes = new { @class = "form-control add_product_price", @type = "number" } })
                    @Html.ValidationMessageFor(model => Model.price, "", new { @class = "text-danger" })
                    <div id="price_error" class="has-error"></div>
                </div>
            </div>

            <div class="form-group">
                 <input type="submit" id="button_create_product" class="btn btn-success btn_submit_product" value="Save" />
            </div>
        </div>
    }
</div>

