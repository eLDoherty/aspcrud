@model learnnet.Models.Product
@{ 
    ViewBag.Title = "Edit Product";
}
<div class="form-product-page">

    <h2 class="page-title">@ViewBag.Title</h2>

    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "edit_product_form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)
            <div class="form-group input-wrapper">
                <label class="control-label col-md-3" for="name">Product Name</label>
                <div class="col-md-4 bottom-3" style="margin-bottom: 15px;">
                    @Html.EditorFor(model => Model.name, new { htmlAttributes = new { @class = "form-control add_product_name" } })
                    @Html.ValidationMessageFor(model => Model.name, "", new { @class = "text-danger" })
                    <div id="name_error" class="has-error"></div>
                </div>
                <label class="control-label col-md-3" for="price">Product Price</label>
                <div class="col-md-4">
                    @Html.EditorFor(model => Model.price, new { htmlAttributes = new { @class = "form-control add_product_price" } })
                    @Html.ValidationMessageFor(model => Model.price, "", new { @class = "text-danger" })
                    <div id="price_error" class="has-error"></div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" id="button_edit_product" value="Save" class="btn btn-success btn_submit_product" />
            </div>

        </div>

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
